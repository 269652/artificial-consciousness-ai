# ACI System Environment Configuration
# Copy this file to .env and update with your settings

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aci_memory
DB_USER=aci_user
DB_PASSWORD=aci_password

# Redis Connection
REDIS_HOST=localhost
REDIS_PORT=6379

# ===========================================
# AI SERVICE CONFIGURATION
# ===========================================

# Perplexity API (for LLM responses)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# OpenAI API (optional fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic API (optional fallback)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-latest

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Logging Level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Log Directory
LOG_DIR=logs

# Session ID (auto-generated if not set)
# SESSION_ID=session_20241208_143022

# ===========================================
# SYSTEM CONFIGURATION
# ===========================================

# Memory Settings
MAX_EPISODIC_MEMORIES=10000
MAX_NARRATIVE_MEMORIES=5000
KNOWLEDGE_EXTRACTION_INTERVAL=10
MEMORY_PERSISTENCE_INTERVAL=5

# Performance Settings
MAX_WORKERS=4
BATCH_SIZE=32
CACHE_TTL=3600

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Debug Mode
DEBUG=false

# Enable Performance Monitoring
PERFORMANCE_MONITORING=true

# Enable Detailed Tracing
DETAILED_TRACING=false

# ===========================================
# EXTERNAL SERVICE CONFIGURATION
# ===========================================

# Webhook URLs for notifications (optional)
WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Monitoring Service
MONITORING_ENDPOINT=

# ===========================================
# SECURITY SETTINGS
# ===========================================

# API Key for external access (optional)
ACI_API_KEY=

# Enable HTTPS
ENABLE_HTTPS=false

# SSL Certificate Path
SSL_CERT_PATH=
SSL_KEY_PATH=
